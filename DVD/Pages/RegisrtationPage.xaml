<Page x:Class="DVD.Pages.RegisrtationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisrtationPage" Background="Black">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Регистрация" FontFamily="Impact" FontSize="30" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" Margin="10" Foreground="Fuchsia"  TextAlignment="Center"  />
        <TextBlock Text="ФИО:" FontSize="30" FontFamily="Impact" Grid.Column="1"  Grid.Row="1" Margin="10 20 0 0" Foreground="Fuchsia"  TextAlignment="Justify"  />
        <TextBlock Text="Номер телефона:" FontSize="30" FontFamily="Impact" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Margin="10 20 0 0" Foreground="Fuchsia"  TextAlignment="Center"  />
        <TextBlock Text="Пароль:" FontSize="30" Grid.Column="1" FontFamily="Impact"  Grid.Row="3" Margin="10 20 0 0" Foreground="Fuchsia" TextAlignment="Center"  />
        <TextBox x:Name="Fiotxb" FontSize="40" Grid.Column="2"  Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="1"  TextAlignment="Center" Height="50"  />
        <TextBox x:Name="Tntxb" FontSize="40" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="2"  TextAlignment="Center" Height="50"  />
        <TextBox x:Name="Reglogintxb" FontSize="40" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="3"  TextAlignment="Center" Height="50"  />
        <Button x:Name="RegesrtRegbtn" Content="Зарегистрироваться" FontFamily="Impact" FontSize="20" Grid.Column="2" Grid.ColumnSpan="2"  Margin="10,10,10,10" Grid.Row="4"  Height="50" Width="200" Click="RegesrtRegbtn_Click" Background="Fuchsia"  />
        <Image Source="/Resourse/i3.png" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="112,0,48,0" />

    </Grid>
</Page>
