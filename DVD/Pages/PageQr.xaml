<Page x:Class="DVD.Pages.PageQr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageQr" >


    <Grid  >
        <Grid.Background>
            <ImageBrush ImageSource= "/Resourse/i4.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" >
            <Button x:Name="CreateQrBtn" Content="создать QR" Width="150" Margin="20"  Height="50" Click="CreateQrBtn_Click" Background="HotPink" FontFamily="Impact" FontSize="20"/>
            
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="ImageQr" Width="200" Height="200" />
            
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" >
            <Button x:Name="SignUp" Content="зарегистрируйся, зайка" Margin="20" Width="246" Height="50" Click="SignUp_Click" Background="HotPink" FontFamily="Impact" FontSize="20"/>

        </StackPanel>
    </Grid>
</Page>
